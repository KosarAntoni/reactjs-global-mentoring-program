{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "containers/*": ["containers/*"],
      "templates/*": ["templates/*"],
      "styles/*": ["styles/*"],
      "utilities/*": ["utilities/*"],
      "store/*": ["store/*"],
      "consts/*": ["consts/*"]
    },
  },
  "exclude": ["node_modules", "cypress", "cypress.config.ts"]
}
